generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}


datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  username String
  password String
  todos    Todo[]
}

model Todo {
  id      String  @id @default(uuid())
  task    String
  done    Boolean @default(false)
  user_id String
  user    User    @relation(fields: [user_id], references: [id])
}
